{
    "expo": {
        "name": "Viblo",
        "slug": "viblo",
        "version": "1.1.0",
        "scheme": "viblo",
        "userInterfaceStyle": "automatic",
        "orientation": "default",
        "icon": "./assets/icon.png",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#4A90E2"
        },
        "plugins": [
            [
                "expo-router",
                {
                    "origin": "https://viblo.io"
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "The app accesses your photos to let you share them with your friends."
                }
            ],
            [
                "expo-notifications",
                {
                    "icon": "./assets/favicon.png",
                    "color": "#ffffff",
                    "sounds": [],
                    "mode": "production"
                }
            ],
            [
                "@stripe/stripe-react-native",
                {
                    "merchantIdentifier": "merchant.io.viblo",
                    "enableGooglePay": true
                }
            ],
            [
                "@stripe/stripe-react-native",
                {
                    "merchantIdentifier": "merchant.io.viblo",
                    "enableGooglePay": true
                }
            ],
            "@react-native-google-signin/google-signin",
            "expo-localization",
            "expo-web-browser"
        ],
        "extra": {
            "router": {
                "origin": "https://viblo.io"
            },
            "eas": {
                "projectId": "f729ec49-9c1d-42f3-a307-dc1801a5ea0b"
            }
        },
        "android": {
            "package": "io.viblo.app",
            "versionCode": 1,
            "permissions": [
                "android.permission.RECORD_AUDIO",
                "android.permission.POST_NOTIFICATIONS",
                "android.permission.RECEIVE_BOOT_COMPLETED",
                "android.permission.VIBRATE",
                "android.permission.WAKE_LOCK"
            ],
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#4A90E2"
            },
            "splash": {
                "image": "./assets/splash.png",
                "resizeMode": "contain",
                "backgroundColor": "#4A90E2",
                "mdpi": "./assets/splash.png",
                "hdpi": "./assets/splash.png",
                "xhdpi": "./assets/splash.png",
                "xxhdpi": "./assets/splash.png",
                "xxxhdpi": "./assets/splash.png"
            }
        },
        "ios": {
            "bundleIdentifier": "io.viblo.app",
            "buildNumber": "1",
            "icon": "./assets/icon.png",
            "infoPlist": {
                "ITSAppUsesNonExemptEncryption": false,
                "UIBackgroundModes": [
                    "remote-notification"
                ]
            },
            "splash": {
                "image": "./assets/splash.png",
                "resizeMode": "contain",
                "backgroundColor": "#4A90E2",
                "tabletImage": "./assets/splash.png"
            }
        }
    }
}